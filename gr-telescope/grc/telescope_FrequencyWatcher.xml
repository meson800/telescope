<?xml version="1.0"?>
<block>
  <name>FrequencyWatcher</name>
  <key>telescope_FrequencyWatcher</key>
  <category>telescope</category>
  <import>import telescope</import>
  <make>telescope.FrequencyWatcher($source_alias, $freq_offset)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>RTLSDR Block Alias</name>
    <key>source_alias</key>
    <type>string</type>
  </param>

  <param>
    <name>Frequency Offset</name>
    <key>freq_offset</key>
    <type>real</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
